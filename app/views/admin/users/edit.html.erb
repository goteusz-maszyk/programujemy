<%= form_tag admin_users_url, method: :post do %>
  <h4>Edytuj Użytkownika <%= @user.username %></h4>

  <div class="border p-4 mb-4">
    <div class="form-group row">
      <div class="col-sm-10">
        <%= text_field_tag :"user[username]", @user.username, placeholder: "Nazwa Użytkownika", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= email_field_tag :"user[email]", @user.email, placeholder: "E-Mail", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= password_field_tag :"user[password]", @user.password, placeholder: "(nowe) Hasło", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= password_field_tag :"user[password_confirmation]", @user.password_confirmation, placeholder: "Potwierdź (nowe) hasło", class: "form-control" %>
      </div>
    </div>
    <div class="form-group form-check">
      <div class="col-sm-10">
        <%= check_box_tag :"user[admin]", class: "form-check-input" %>
        <%= label_tag :"user[admin]", "Administrator", class: "form-check-label" %>
      </div>
    </div>
  </div>
  <%= submit_tag 'Zarejestruj się', class: "btn btn-outline-primary" %>
<% end %>
