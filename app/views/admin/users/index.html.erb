<h4>ADMIN</h4>

<%= link_to "Dodaj użytkownika", new_admin_user_path %>

<% if @users.present? %>
  <ul class='list-group'>
    <% @users.each do |user| %>
      <li class='list-group-item d-flex justify-content-between align-items-center'>
        <%= user.username %>
        <span>
          <%= link_to "Zbanuj", admin_user_lock_user_url(user_id: user.id) %> |
          <%= link_to "Edytuj", edit_admin_user_url(id: user.id) %> |
          <%= link_to 'Usuń', admin_user_path(user), data: { href: admin_user_path(user), method: :delete, confirm: "Usunąć użytkownika #{user.username}?" } %>
        </span>
      </li>
    <% end %>
  </ul>
<% end %>